{
    "$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noEmptyInterface": "off",
                "noRedeclare": "off"
            },
            "style": {
                "noParameterAssign": "off"
            }
        }
    }
}
