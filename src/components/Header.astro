---
import { Icon } from 'astro-preload/components'
import Search from 'astro-pagefind/components/Search'

import HeaderLink from './HeaderLink.astro'
import ThemeSwitcher from './ThemeSwitcher.astro'
import { SITE_TITLE } from '@consts'
const links = [
    {
        text: 'Writings',
        href: '/writings',
    },
    {
        text: 'Notes',
        href: '/notes',
    },
    {
        text: 'Tags',
        href: '/tags',
    },
    {
        text: 'About',
        href: '/about',
    },
]
---

<header class="navbar m-auto max-w-3xl lg:max-w-4xl px-0 md:px-2">
    <h1 class="flex-1 text-sm sm:text-2xl">
        <a class="hidden md:inline" href={import.meta.env.BASE_URL}>{SITE_TITLE}</a>

        <div class="dropdown md:hidden">
            <label tabindex="0" class="btn btn-ghost btn-circle">
                <svg xmlns="http://www.w3.org/2000/svg" class="fill-current h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path></svg>
            </label>

            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                {
                    links.map(({ text, href }) => (
                        <li>
                            <HeaderLink class="font-bold decoration-transparent" href={href}>
                                {text}
                            </HeaderLink>
                        </li>
                    ))
                }
            </ul>
        </div>
    </h1>

    <div class="flex-none gap-2 md:gap-4">
        <div class="hidden md:flex gap-6">
            {
                links.map(({ text, href }) => (
                    <HeaderLink class="font-bold hover:text-primary-focus" href={href}>
                        {text}
                    </HeaderLink>
                ))
            }
        </div>

        <a class="md:ml-6 focus-outline active group inline-block p-3 sm:p-1" href={import.meta.env.BASE_URL + 'search'} tabindex="0" title="Search" aria-label="search">
            <svg xmlns="http://www.w3.org/2000/svg" class="fill-current w-6 h-6 scale-125 sm:scale-100"><path d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z" class="astro-3EF6KSR2"></path></svg>
        </a>
        <HeaderLink href="https://github.com/fw6" target="_blank"><Icon name="mdi:github" /></HeaderLink>
        <ThemeSwitcher />
    </div>

    <!-- <nav class="flex gap-x-4">
        {
            links.map(({ text, href }) => (
                <HeaderLink class="font-bold hover:text-primary-focus" href={href}>
                    {text}
                </HeaderLink>
            ))
        }

        <HeaderLink class="pl-6" href="https://github.com/fw6" target="_blank"><Icon name="mdi:github" /></HeaderLink>

        <ThemeSwitcher />
    </nav> -->
</header>
<div class="divider max-w-3xl lg:max-w-4xl mx-auto my-0"></div>

<style>
    /* header {
        margin: 0em auto 2em;
    } */
    h2 {
        margin: 0.5em 0;
    }
</style>
